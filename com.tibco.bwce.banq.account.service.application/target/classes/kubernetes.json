{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "bwce-account"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "bwce-account-app"
    },
    "template": {
      "metadata": {
        "name": "bwce-account-app",
        "labels": {
          "app": "bwce-account-app"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "bwce-account-app",
            "image": "gcr.io/tibco-1294/bwce.banq.account.service",
            "env": [
              {
                "name": "APP_CONFIG_PROFILE",
                "value": "Cloud"
              },
              {
                "name": "CONSUL_SERVER_URL",
                "value": "http://104.197.227.155/"
              },
              {
                "name": "BW_PROFILE",
                "value": "Cloud"
              }
            ],
            "imagePullPolicy": "Always",
            "ports": [
              {
                "containerPort": 8080
              }
            ]
          }
        ]
      }
    }
  }
}